<%-- Un modal riusabile per la fine di una operazione --%>

<div class="modal fade" id="modalFineOperazione" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title" id="modalFineOperazioneTitle">Modal title</h4>
      </div>
      <div class="modal-body">
        <p id="modalFineOperazioneBody">One fine body</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->